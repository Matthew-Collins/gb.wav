Static Public Function AppendWavFile(FileName As String, NotesFolder As String) As WavFile

  Dim Model As WavFile = WavFile.GetNewTemplate()
  Dim Text As String
  Dim Bar As String
  Dim Note As String
  Dim Gap As Byte

  Text = File.Load(FileName)

  For Each Bar In Split(Text, gb.NewLine)
    For Each Note In Split(Bar)
      Note = Trim(Note)
      If Note

        Gap = CByte(Right(Note, 1))
        Note = Left(Note, 2)
        Model.AppendWavFile(NotesFolder &/ Note & ".wav")

      End If
    Next
  Next

  Return Model

End

Static Public Function MergeWavFile(FileName As String, NotesFolder As String) As WavFile

  Dim Model As WavFile = WavFile.GetNewTemplate()
  Dim Text As String
  Dim Bar As String
  Dim Note As String
  Dim Gap As Byte
  Dim Offset As Integer

  Text = File.Load(FileName)

  For Each Bar In Split(Text, gb.NewLine)
    For Each Note In Split(Bar)
      Note = Trim(Note)
      If Note

        Gap = CByte(Right(Note, 1))
        Note = Left(Note, 2)

        Model.MergeWavFile(NotesFolder &/ Note & ".wav", Offset)

        OffSet += Gap

      End If
    Next
  Next

  Return Model

End

Static Public Function MergeWavFile_v2(FileName As String, NotesFolder As String, Speed As Float) As WavFile

  Dim Model As WavFile = WavFile.GetNewTemplate()
  Dim Text As String
  Dim Chrod As String
  Dim Data As String[]
  Dim Gap As Float
  Dim Index As Integer
  Dim Note As String
  Dim Offset As Float

  Text = File.Load(FileName)

  For Each Chrod In Split(Text, gb.NewLine)
    Chrod = Trim(Chrod)
    If Chrod And If Not (Left(Chrod, 1) = "'")
      Data = Split(Chrod)
      Gap = Data[0] * Speed
      If Data.Count = 1
        Model.AddPause(Gap)
      Else
        For Index = 1 To Data.Count - 1
          Note = Trim(Data[Index])
          If Note Then
            Print Offset;; Note;;
            Model.MergeWavFile(NotesFolder &/ Note & ".wav", Offset)
          End If
        Next
      End If

      OffSet += Gap
    End If
  Next

  ' With Model.DataChunks[0]
  '   .ShowLimits
  '   .CleanLimits
  '   .ShowLimits
  ' End With

  Return Model

End
